{
  "compileOnSave": false,
  "compilerOptions": {
    "target": "es5",
    "lib": ["es2016", "dom"],
    "types": ["websql"],
    "module": "es2015",
    "moduleResolution": "node",
    "importHelpers": true,
    "strict": true,
    "noImplicitReturns": true,
    "noEmitOnError": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "skipDefaultLibCheck": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "downlevelIteration": true,
    "sourceMap": true,
    "newLine": "LF",
    "baseUrl": ".",
    "rootDir": ".",
    "plugins": [
      {
        "name": "tslint-language-service"
      }
    ]
  },
  "exclude": ["**/*.1.ts", "**/*.1", "**/*.exclude.ts", "**/*.exclude"]
}
